- flash.each do |key, value|
  = content_tag :div, value, class: "flash #{key}"

= form_tag 'users/attempt_login' do
  = field_set_tag do
    = label_tag :username, 'Username:'
    = text_field_tag :username
    = label_tag :password, 'Password:'
    = password_field_tag :password
    = submit_tag 'Log in'

%h1 New user

= render 'form'

